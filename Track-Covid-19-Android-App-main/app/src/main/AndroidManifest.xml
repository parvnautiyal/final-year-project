    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HelplineNumber" />
        <activity android:name=".KnowMoreActivity" />
        <activity android:name=".DetailActivityDistrict" />
        <activity android:name=".DistrictActivity" />
        <activity android:name=".DetailActivityState" />
        <activity android:name=".StateActivity" />
        <activity android:name=".India">

        </activity>
        <activity android:name=".DetailActivity" />
        <activity android:name=".AffectedCountries" />
        <activity android:name=".SplashScreen"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".MainActivity"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>